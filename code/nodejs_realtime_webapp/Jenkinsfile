pipeline {
    agent any
    environment {
        OPENAI_API_KEY = credentials('OPENAI_API_KEY')
    }
    stages {
        stage('Build Docker Image') {
            steps {
                script {
                    sh 'pwd'
                    sh "ls -alh"
                    sh "ls -alh $WORKSPACE"
                    sh "ls -la $WORKSPACE/cognitive_warmup/code/nodejs_realtime_webapp"
                    def image = docker.build("my-node-app:latest", "${env.WORKSPACE}/cognitive_warmup/code/nodejs_realtime_webapp")
                }
            }
        }
        stage('Run Node App in Docker') {
            steps {
                script {
                    def result = docker.image("my-node-app:latest").inside {
                        sh(script: 'node app.js', returnStatus: true)
                    }
                    if (result != 0) {
                        error "Node app.js failed with exit code ${result}"
                    }
                }
            }
        }
    }
    post {
        always {
            script {
                sh 'docker rmi my-node-app:latest'
            }
        }
    }
}