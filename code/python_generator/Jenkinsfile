pipeline {
    agent any
    triggers {
        githubPush()
    }
    stages {
        stage('Build') {
            steps {
                script {
                    sh """echo $WORKSPACE
                       cd $WORKSPACE/code/python_generator; pwd; ls -alh
                       ./build.sh"""
                }
            }
        }
        stage('Test') {
            steps {
                script {
                    sh """docker run --rm \
                            -e "OPENAI_API_KEY=\$OPENAI_API_KEY" \
                            -e "YOUTUBE_API_KEY=\$YOUTUBE_API_KEY" \
                            -v \$WORKSPACE/source:/app/source:ro \
                            -v \$WORKSPACE/generated:/app/output \
                            -v \$WORKSPACE/config:/app/config:ro \
                            python_generator
                       docker ps"""
                }
            }
        }
    }
    post {
        always {
            script {
                sh 'docker stop python_generator || true'
                sh 'docker rm python_generator || true'
            }
        }
    }
}