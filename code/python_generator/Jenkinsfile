pipeline {
    agent any
    triggers {
        githubPush()
    }
    stages {
        stage('Build') {
            steps {
                script {
                    sh """echo $WORKSPACE
                       cd $WORKSPACE/code/python_generator; pwd; ls -alh
                       ./build.sh"""
                }
            }
        }
        stage('Test') {
            agent {
                docker {
                    image 'python_generator' // Replace with your specific image
                    args """
                        -v ${env.WORKSPACE}/source:/app/source:ro \
                        -v ${env.WORKSPACE}/generated:/app/output \
                        -v ${env.WORKSPACE}/config:/app/config:ro \
                        --user \$(id -u):\$(id -g)
                    """
                    reuseNode true
                }
            }
            steps {
                script {
                    // Ensure directories exist and have proper permissions
                    sh """
                        echo "Checking directories in $WORKSPACE"
                        chmod -R 755 $WORKSPACE/source $WORKSPACE/generated $WORKSPACE/config
                        ls -alh $WORKSPACE/source $WORKSPACE/generated $WORKSPACE/config $WORKSPACE
                    """
                }
            }
        }
    }
    post {
        always {
            script {
                sh 'docker stop python_generator || true'
                sh 'docker rm python_generator || true'
            }
        }
    }
}